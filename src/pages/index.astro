---
import PageLayout from "../layouts/PageLayout.astro";
import { allRoadmaps } from "../data/roadmaps";
---

<PageLayout title="Home">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 pointer-events-none">
      <div
        class="absolute top-[-20%] left-1/2 -translate-x-1/2 w-[800px] h-[600px] rounded-full opacity-30"
        style="background: radial-gradient(ellipse, rgba(0,229,160,0.12) 0%, transparent 70%);"
      >
      </div>
      <div
        class="absolute top-[10%] left-[20%] w-[300px] h-[300px] rounded-full opacity-20"
        style="background: radial-gradient(circle, rgba(56,189,248,0.1) 0%, transparent 70%);"
      >
      </div>
      <div class="absolute inset-0 dot-grid opacity-20"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-6 pt-24 pb-20 lg:pt-36 lg:pb-32">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Tag -->
        <div
          class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-teal/5 border border-teal/15 text-xs font-medium text-teal mb-8 animate-fade-in"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-teal animate-pulse"></span>
          AI-Powered Developer Growth Platform
        </div>

        <!-- Headline -->
        <h1
          class="font-display font-extrabold text-4xl sm:text-5xl lg:text-6xl text-bright leading-[1.1] tracking-tight mb-6 animate-fade-in-up"
        >
          Your career path,<br />
          <span class="text-gradient">intelligently mapped</span>
        </h1>

        <!-- Subheadline -->
        <p
          class="text-lg sm:text-xl text-dim leading-relaxed max-w-xl mx-auto mb-10 animate-fade-in-up"
          style="animation-delay: 0.1s;"
        >
          Adaptive roadmaps that learn with you. In-browser coding, spaced
          repetition, and career tools â€” everything developers need to level up.
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up"
          style="animation-delay: 0.2s;"
        >
          <a
            href="/roadmaps"
            class="inline-flex items-center px-8 py-3.5 rounded-xl text-base font-bold bg-teal text-void hover:bg-teal-dim transition-all duration-200 shadow-glow hover:shadow-glow-lg"
          >
            Explore Roadmaps
            <svg
              class="ml-2 w-4 h-4"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="/ai-tutor"
            class="inline-flex items-center px-8 py-3.5 rounded-xl text-base font-medium bg-raised border border-white/8 text-text hover:bg-elevated hover:border-white/12 transition-all duration-200"
          >
            <svg
              class="mr-2 w-4 h-4 text-violet"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M12 2a4 4 0 0 1 4 4v2a4 4 0 0 1-8 0V6a4 4 0 0 1 4-4zM5 10v2a7 7 0 0 0 14 0v-2"
              ></path>
              <path d="M12 19v3M8 22h8"></path>
            </svg>
            Try AI Tutor
          </a>
        </div>

        <!-- Social Proof -->
        <div
          class="mt-16 flex items-center justify-center gap-8 text-sm text-dim animate-fade-in"
          style="animation-delay: 0.35s;"
        >
          <div class="flex items-center gap-2">
            <span class="font-mono font-bold text-bright text-lg">5</span>
            <span>Roadmaps</span>
          </div>
          <div class="w-px h-5 bg-white/10"></div>
          <div class="flex items-center gap-2">
            <span class="font-mono font-bold text-bright text-lg">50+</span>
            <span>Topics</span>
          </div>
          <div class="w-px h-5 bg-white/10"></div>
          <div class="flex items-center gap-2">
            <span class="font-mono font-bold text-bright text-lg">Free</span>
            <span>to start</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="relative py-24 lg:py-32">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-bright mb-4">
          Not just another roadmap site
        </h2>
        <p class="text-dim text-lg max-w-xl mx-auto">
          We go beyond static checklists. DevPath adapts to how you learn and
          connects your skills to real career outcomes.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {[
          {
            icon: "ðŸ§ ",
            title: "Adaptive AI Paths",
            desc: "Roadmaps that adjust to your skill level, pace, and goals. Skip what you know, reinforce what you don't.",
            color: "teal",
          },
          {
            icon: "ðŸ’»",
            title: "Integrated Code Editor",
            desc: "Practice in the browser with an IDE, auto-grading, and AI code review. No context switching.",
            color: "sky",
          },
          {
            icon: "ðŸŽ®",
            title: "Gamified Learning",
            desc: "XP, streaks, leaderboards, and achievements that make consistency feel rewarding.",
            color: "amber",
          },
          {
            icon: "ðŸš€",
            title: "Career Integration",
            desc: "Verified skill badges, portfolio generation, and job matching based on your skill graph.",
            color: "violet",
          },
        ].map((feature) => (
          <div class="group rounded-xl bg-surface border border-white/5 p-6 hover:border-teal/15 transition-all duration-300">
            <div class="text-3xl mb-4">{feature.icon}</div>
            <h3 class="font-display font-bold text-bright text-base mb-2">
              {feature.title}
            </h3>
            <p class="text-sm text-dim leading-relaxed">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Roadmaps Preview -->
  <section class="relative py-24 lg:py-32 bg-abyss border-y border-white/5">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-end justify-between mb-12">
        <div>
          <h2 class="font-display font-bold text-3xl text-bright mb-2">
            Popular Roadmaps
          </h2>
          <p class="text-dim">
            Choose your path and start tracking your progress today.
          </p>
        </div>
        <a
          href="/roadmaps"
          class="hidden sm:inline-flex items-center gap-1.5 text-sm text-teal hover:text-teal-dim font-medium transition-colors"
        >
          View all
          <svg
            class="w-4 h-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        {
          allRoadmaps.slice(0, 6).map((roadmap) => (
            <a
              href={`/roadmaps/${roadmap.id}`}
              class="group block rounded-xl bg-surface border border-white/5 hover:border-teal/20 p-6 transition-all duration-300 hover:shadow-glow"
            >
              <div class="flex items-start justify-between mb-4">
                <span class="text-3xl">{roadmap.icon}</span>
                <span class="text-[10px] uppercase tracking-widest font-semibold text-dim bg-elevated px-2 py-0.5 rounded-full">
                  {roadmap.category}
                </span>
              </div>
              <h3 class="font-display font-bold text-bright text-lg mb-1.5 group-hover:text-teal transition-colors">
                {roadmap.title}
              </h3>
              <p class="text-sm text-dim leading-relaxed mb-4 line-clamp-2">
                {roadmap.description}
              </p>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <span class="text-xs text-subtle">
                    {roadmap.totalNodes || roadmap.nodes.length} topics
                  </span>
                  <span class="text-xs text-subtle">
                    ~{roadmap.estimatedHours}h
                  </span>
                </div>
                <svg
                  class="w-4 h-4 text-muted group-hover:text-teal group-hover:translate-x-1 transition-all duration-200"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M5 12h14M12 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="relative py-24 lg:py-32">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-bright mb-4">
          Why developers choose DevPath
        </h2>
        <p class="text-dim text-lg max-w-xl mx-auto">
          See how we compare to traditional roadmap sites.
        </p>
      </div>

      <div
        class="max-w-3xl mx-auto rounded-2xl bg-surface border border-white/5 overflow-hidden"
      >
        <div class="grid grid-cols-3 border-b border-white/5 text-sm font-semibold">
          <div class="px-6 py-4 text-dim">Feature</div>
          <div class="px-6 py-4 text-center text-dim">Others</div>
          <div
            class="px-6 py-4 text-center text-teal bg-teal/5 border-l border-teal/10"
          >
            DevPath
          </div>
        </div>
        {
          [
            ["Static Roadmaps", true, true],
            ["Progress Tracking", true, true],
            ["Adaptive AI Paths", false, true],
            ["Spaced Repetition", false, true],
            ["Integrated Code Editor", false, true],
            ["Auto-graded Projects", false, true],
            ["XP & Gamification", false, true],
            ["Verified Skill Badges", false, true],
            ["Job Matching", false, true],
            ["AI Code Review", false, true],
          ].map(([feature, others, devpath]) => (
            <div class="grid grid-cols-3 border-b border-white/3 last:border-0 text-sm">
              <div class="px-6 py-3.5 text-text">{feature}</div>
              <div class="px-6 py-3.5 flex justify-center">
                {others ? (
                  <span class="text-dim">âœ“</span>
                ) : (
                  <span class="text-muted">â€”</span>
                )}
              </div>
              <div class="px-6 py-3.5 flex justify-center bg-teal/3 border-l border-teal/5">
                {devpath ? (
                  <span class="text-teal font-semibold">âœ“</span>
                ) : (
                  <span class="text-muted">â€”</span>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-24 lg:py-32 bg-abyss border-t border-white/5">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <div
        class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-teal/5 border border-teal/15 text-xs font-medium text-teal mb-8"
      >
        Free to get started
      </div>
      <h2 class="font-display font-extrabold text-3xl sm:text-4xl text-bright mb-4">
        Start your developer journey today
      </h2>
      <p class="text-dim text-lg max-w-lg mx-auto mb-10">
        Join developers who are already learning smarter with AI-powered,
        personalized roadmaps.
      </p>
      <a
        href="/signup"
        class="inline-flex items-center px-10 py-4 rounded-xl text-lg font-bold bg-teal text-void hover:bg-teal-dim transition-all duration-200 shadow-glow hover:shadow-glow-lg"
      >
        Create Free Account
        <svg
          class="ml-2 w-5 h-5"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
        >
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </section>
</PageLayout>
