        </div>

        <!-- Code Editor Mock -->
        <div class="rounded-2xl bg-surface border border-white/8 overflow-hidden shadow-elevated">
          <div class="flex items-center gap-2 px-4 py-2.5 border-b border-white/5 bg-white/2">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full bg-rose/50"></div>
              <div class="w-3 h-3 rounded-full bg-amber/50"></div>
              <div class="w-3 h-3 rounded-full bg-teal/50"></div>
            </div>
            <div class="flex items-center gap-2 ml-3">
              <div class="px-3 py-1 rounded-md bg-abyss border border-white/5 text-xs font-mono text-dim">solution.tsx</div>
            </div>
            <div class="ml-auto flex items-center gap-1.5">
              <span class="px-2.5 py-0.5 rounded-md text-[10px] font-medium bg-teal/10 text-teal border border-teal/20">â–¶ Run</span>
              <span class="px-2.5 py-0.5 rounded-md text-[10px] font-medium bg-violet/10 text-violet border border-violet/20">ðŸ§ª Test</span>
              <span class="px-2.5 py-0.5 rounded-md text-[10px] font-medium bg-amber/10 text-amber border border-amber/20">âœ¨ AI</span>
            </div>
          </div>
          <div class="p-5 font-mono text-sm leading-relaxed">
            <div><span class="text-violet">function</span> <span class="text-sky">LRUCache</span>(<span class="text-amber">capacity</span>) {'{'}</div>
            <div class="pl-6"><span class="text-violet">this</span>.capacity = capacity;</div>
            <div class="pl-6"><span class="text-violet">this</span>.cache = <span class="text-violet">new</span> <span class="text-sky">Map</span>();</div>
            <div>{'}'}</div>
            <div class="mt-2"><span class="text-dim">// O(1) get operation</span></div>
            <div>LRUCache.prototype.<span class="text-sky">get</span> = <span class="text-violet">function</span>(<span class="text-amber">key</span>) {'{'}</div>
