---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
---

<BaseLayout title="Page Not Found">
  <Header />
  <main class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 dot-grid opacity-30"></div>
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full bg-[var(--color-accent-teal)]/[0.03] blur-[120px]"></div>

    <div class="relative z-10 text-center px-4 max-w-xl mx-auto">
      <!-- Glitch-style 404 -->
      <div class="relative mb-8">
        <h1 class="text-[10rem] md:text-[14rem] font-bold leading-none tracking-tighter select-none">
          <span class="text-gradient">404</span>
        </h1>
        <div class="absolute inset-0 flex items-center justify-center opacity-10 blur-sm pointer-events-none">
          <span class="text-[10rem] md:text-[14rem] font-bold text-[var(--color-accent-teal)]">404</span>
        </div>
      </div>

      <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">
        Lost in the codebase
      </h2>
      <p class="text-[var(--color-silver)] text-lg mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist, was moved, or is still being developed. Let's get you back on track.
      </p>

      <!-- Action buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3 mb-12">
        <a
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-[var(--color-accent-teal)] text-[var(--color-void)] font-semibold text-sm hover:brightness-110 transition-all"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          Go Home
        </a>
        <a
          href="/roadmaps"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-xl border border-[var(--color-charcoal)] text-[var(--color-silver)] font-medium text-sm hover:border-[var(--color-steel)] hover:text-white transition-all"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="12 2 2 7 12 12 22 7 12 2"/>
            <polyline points="2 17 12 22 22 17"/>
            <polyline points="2 12 12 17 22 12"/>
          </svg>
          Browse Roadmaps
        </a>
      </div>

      <!-- Terminal-style hint -->
      <div class="inline-block rounded-lg border border-[var(--color-charcoal)] bg-[var(--color-obsidian)] px-5 py-4 text-left">
        <div class="flex items-center gap-2 mb-2">
          <div class="w-2.5 h-2.5 rounded-full bg-[var(--color-rose)]"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-[var(--color-amber)]"></div>
          <div class="w-2.5 h-2.5 rounded-full bg-[var(--color-accent-teal)]"></div>
          <span class="text-xs text-[var(--color-steel)] ml-2 font-mono">devpath-terminal</span>
        </div>
        <code class="text-sm font-mono">
          <span class="text-[var(--color-accent-teal)]">$</span>
          <span class="text-[var(--color-silver)]"> curl -s devpath.dev</span><span class="text-[var(--color-steel)]">/this-page</span>
          <br />
          <span class="text-[var(--color-rose)]">Error 404:</span>
          <span class="text-[var(--color-steel)]"> Route not found. Did you mean </span>
          <a href="/roadmaps" class="text-[var(--color-accent-teal)] underline underline-offset-2 hover:brightness-125">/roadmaps</a>
          <span class="text-[var(--color-steel)]">?</span>
          <br />
          <span class="text-[var(--color-accent-teal)]">$</span>
          <span class="text-[var(--color-steel)] animate-pulse">â–Œ</span>
        </code>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  @keyframes glitch {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(2px, -2px); }
    60% { transform: translate(-1px, -1px); }
    80% { transform: translate(1px, 1px); }
  }
</style>
