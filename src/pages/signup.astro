---
import BaseLayout from '../layouts/BaseLayout.astro';
import { AuthForm } from '../components/auth/AuthForm';
---

<BaseLayout title="Sign up" description="Create your SkillRoute account and start learning with AI-powered roadmaps">
  <div class="min-h-screen flex items-center justify-center px-4 py-16 relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 dot-grid opacity-30" />
    <div
      class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[400px] rounded-full opacity-[0.08]"
      style="background: radial-gradient(circle, var(--color-accent-teal), transparent 70%);"
    />

    <div class="relative z-10 w-full max-w-md">
      <div class="glass rounded-2xl p-8 border border-white/[0.06]">
        <AuthForm client:load mode="signup" />
      </div>
    </div>
  </div>
</BaseLayout>
