---
import PageLayout from '../layouts/PageLayout.astro';
import BillingSettings from '../components/billing/BillingSettings';
---

<PageLayout title="Billing" description="Manage your DevPath subscription, view plans, and access payment history.">
  <section class="max-w-5xl mx-auto px-6 py-12">
    <div class="mb-8">
      <h1 class="font-display font-extrabold text-3xl text-bright mb-2">
        Billing & Subscription
      </h1>
      <p class="text-dim text-sm">
        Manage your plan, payment methods, and view your billing history.
      </p>
    </div>
    <BillingSettings client:load />
  </section>
</PageLayout>
