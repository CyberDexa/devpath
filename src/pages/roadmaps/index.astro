---
import PageLayout from "../../layouts/PageLayout.astro";
import { allRoadmaps } from "../../data/roadmaps";
import RoadmapGrid from "../../components/roadmap/RoadmapGrid";

const roleRoadmaps = allRoadmaps.filter((r) => r.category === "role");
---

<PageLayout
  title="All Roadmaps"
  description="Explore interactive developer roadmaps covering frontend, backend, DevOps, AI, and more."
>
  <section class="max-w-7xl mx-auto px-6 py-16">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="font-display font-extrabold text-3xl sm:text-4xl text-bright mb-3">
        Developer Roadmaps
      </h1>
      <p class="text-dim text-lg max-w-2xl">
        Interactive, AI-enhanced roadmaps to guide your learning journey. Click
        any roadmap to explore topics, track progress, and access curated
        resources.
      </p>
    </div>

    <!-- Filters (static for now) -->
    <div class="flex items-center gap-2 mb-8">
      {
        ["All", "Role-based", "Skill-based", "Best Practices"].map(
          (filter, i) => (
            <button
              class:list={[
                "px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200",
                i === 0
                  ? "bg-teal/10 text-teal border border-teal/20"
                  : "text-dim hover:text-text bg-raised border border-white/5 hover:border-white/10",
              ]}
            >
              {filter}
            </button>
          ),
        )
      }
    </div>

    <!-- Role-based Roadmaps -->
    <div class="mb-16">
      <h2 class="font-display font-bold text-xl text-bright mb-6 flex items-center gap-2">
        <span class="w-1 h-5 rounded-full bg-teal"></span>
        Role-based Roadmaps
      </h2>
      <RoadmapGrid roadmaps={roleRoadmaps} client:load />
    </div>

    <!-- Coming Soon -->
    <div
      class="rounded-2xl bg-surface border border-white/5 p-10 text-center"
    >
      <div class="text-4xl mb-4">ðŸš§</div>
      <h3 class="font-display font-bold text-xl text-bright mb-2">
        More roadmaps coming soon
      </h3>
      <p class="text-dim text-sm max-w-md mx-auto">
        Skill-based roadmaps (React, TypeScript, Python, etc.) and best
        practices guides are being built. Want to contribute?
      </p>
      <a
        href="https://github.com"
        class="inline-flex items-center gap-2 mt-6 px-5 py-2.5 rounded-lg text-sm font-medium bg-raised border border-white/8 text-text hover:border-white/15 transition-all"
      >
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
